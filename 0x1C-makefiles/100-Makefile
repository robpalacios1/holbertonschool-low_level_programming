CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic
DEPS = m.h

.PHONY: all clean oclean fclean re

all: $(DEPS) $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean:clean oclean

re: oclean all
